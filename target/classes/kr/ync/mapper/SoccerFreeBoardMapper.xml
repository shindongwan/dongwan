<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ync.mapper.SoccerFreeBoardMapper">
	
	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							member_id like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	
	<select id="getList" resultType="kr.ync.domain.SoccerFreeBoardVO">
	<![CDATA[
		select * from free_board 
		order by board_idx
		]]>
	</select>
	
	<insert id="insert">
		insert into free_board (board_idx, title, content, image, member_id)
		values (seq_board_idx.nextval, #{title}, #{content}, #{image}, #{member_id})
	</insert>
	
	<insert id="insertSelectKey">

		<selectKey keyProperty="bno" order="BEFORE"
			resultType="Long">
			select seq_board.nextval from dual
		</selectKey>

		insert into tbl_board (bno,title,content, writer, file_1, file_2, file_3)
		values (#{bno},
		#{title}, #{content}, #{writer}, #{file_1}, #{file_2}, #{file_3})
	</insert>
	
	<select id="read" resultType="kr.ync.domain.SoccerFreeBoardVO">
		select * from free_board
		where board_idx =#{board_idx} 
		order by board_idx
	</select>


	<delete id="delete">
		delete free_board where board_idx = #{board_idx}
	</delete>
 
	<update id="update">
		update free_board
		set title= #{title},
		content=#{content},
		image = #{image},
		member_id = #{member_id},
		regist_day = SYSDATE
		where board_idx =
		#{board_idx}
	</update>
	
